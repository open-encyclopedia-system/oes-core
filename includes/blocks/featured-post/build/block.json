{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "oes/featured-post",
  "version": "0.1.0",
  "title": "Featured Post",
  "category": "widgets",
  "keywords": [
    "preview",
    "excerpt"
  ],
  "description": "Display a featured post.",
  "attributes": {
    "post_type": {
      "type": "string"
    },
    "oes_post": {
      "type": "string"
    }
  },
  "supports": {
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    },
    "align": true,
    "anchor": true,
    "alignContent": true,
    "color": {
      "text": true,
      "background": true,
      "link": true
    },
    "alignText": true,
    "fullHeight": true
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php"
}